    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-compress": "^5.0.1",
    "koa-helmet": "^6.1.0",
    "koa-router": "10.0.0",
    "koa-session": "^6.2.0",
    "koa2-ratelimit": "^0.9.0",
    "ramda": "^0.27.1",
    "winston": "^3.3.3",
    "winston-sentry-log": "^1.0.21"
  },
  "devDependencies": {
    "@types/app-module-path": "^2.2.0",
