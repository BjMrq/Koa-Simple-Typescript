{
  "name": "typescript-node-koa-boilerplate",
  "description": "Boilerplate Dockerized Koa app",
  "main": "src/server.js",
  "scripts": {
    "start": "node dist/src/app.js",
    "command": "node ./dist/src/commands/executer/index.js",
    "sandbox": "node ./dist/src/commands/executer/index.js sandbox",
    "dev": "tsc-watch --project ./tsconfig.json --noClear --onSuccess \"node --inspect=0.0.0.0:9229 ./dist/src/app.js\"",
